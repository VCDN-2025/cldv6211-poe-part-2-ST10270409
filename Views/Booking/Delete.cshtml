@model lonnieDb.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>
<h3>Are you sure you want to delete this booking?</h3>
<hr />

<div>
    <h4>Booking Details</h4>
    <div>
        <strong>User Name:</strong> @Model.UserName
    </div>
    <div>
        <strong>Booking Date:</strong> @Model.BookingDate.ToString("yyyy-MM-dd")
    </div>
    <div>
        <strong>Status:</strong> @Model.Status
    </div>
    <div>
        <strong>Event:</strong> @Model.Event.Name
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
